<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollView"
        style="@android:style/Widget.DeviceDefault.Light.ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToPadding="true"
        android:fillViewport="true"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <android.support.constraint.ConstraintLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/mondaySwitch"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="@string/switch_initial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle = "bold"
                />

            <Button
                android:id="@+id/mondayButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/button_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mondaySwitch"
                tools:layout_editor_absoluteX="296dp"
                tools:layout_editor_absoluteY="75dp" />

            <TextView
                android:id="@+id/mondayTextView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/text_view_monday"
                app:layout_constraintEnd_toStartOf="@+id/mondayButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mondaySwitch" />

            <Switch
                android:id="@+id/tuesdaySwitch"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="50dp"
                android:text="@string/switch_initial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mondaySwitch"
                android:textStyle = "bold"
                />

            <Switch
                android:id="@+id/wednesdaySwitch"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="50dp"
                android:text="@string/switch_initial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tuesdaySwitch"
                android:textStyle = "bold"
                />

            <Switch
                android:id="@+id/thursdaySwitch"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="50dp"
                android:text="@string/switch_initial"
                app:layout_constraintBottom_toTopOf="@+id/fridaySwitch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wednesdaySwitch"
                android:textStyle = "bold"
                />

            <Switch
                android:id="@+id/fridaySwitch"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="50dp"
                android:text="@string/switch_initial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thursdaySwitch"
                android:textStyle = "bold"
                />

            <Switch
                android:id="@+id/saturdaySwitch"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="50dp"
                android:text="@string/switch_initial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fridaySwitch"
                android:textStyle = "bold"
                />

            <Switch
                android:id="@+id/sundaySwitch"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="50dp"
                android:text="@string/switch_initial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/saturdaySwitch"
                android:textStyle = "bold"
                />

            <Button
                android:id="@+id/tuesdayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tuesdaySwitch" />

            <TextView
                android:id="@+id/tuesdayTextView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/text_view_tuesday"
                app:layout_constraintEnd_toStartOf="@+id/tuesdayButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tuesdaySwitch" />

            <TextView
                android:id="@+id/wednesdayTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/text_view_wednesday"
                app:layout_constraintEnd_toStartOf="@+id/wednesdayButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wednesdaySwitch" />

            <Button
                android:id="@+id/wednesdayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wednesdaySwitch" />

            <Button
                android:id="@+id/thursdayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thursdaySwitch" />

            <Button
                android:id="@+id/fridayButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/button_name"
                app:layout_constraintEnd_toEndOf="@+id/thursdayButton"
                app:layout_constraintTop_toBottomOf="@+id/fridaySwitch" />

            <Button
                android:id="@+id/saturdayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/saturdaySwitch" />

            <TextView
                android:id="@+id/fridayTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/text_view_friday"
                app:layout_constraintEnd_toStartOf="@+id/fridayButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fridaySwitch" />

            <TextView
                android:id="@+id/thursdayTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/text_view_thursday"
                app:layout_constraintEnd_toStartOf="@+id/thursdayButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thursdaySwitch" />

            <TextView
                android:id="@+id/saturdayTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/text_view_saturday"
                app:layout_constraintEnd_toStartOf="@+id/saturdayButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/saturdaySwitch" />

            <TextView
                android:id="@+id/sundayTextView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/text_view_sunday"
                app:layout_constraintEnd_toStartOf="@+id/sundayButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sundaySwitch" />

            <Button
                android:id="@+id/sundayButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sundaySwitch" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</LinearLayout>
